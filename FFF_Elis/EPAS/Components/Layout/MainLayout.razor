@using MudBlazor
@inherits LayoutComponentBase

<MudThemeProvider/>
<MudPopoverProvider/>
<MudDialogProvider/>
<MudSnackbarProvider/>

<MudLayout>
    <header class="fro-header fro-header--with-border" style="z-index: 9000; position: fixed; top: 0; width: 100%">
        <div class="fro-header__left-wrapper">
            <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())"/>
            <div class="fro-header__title">Elis Visualisierung 2.0</div>
        </div>
        <div class="fro-header__menu-wrapper">
        </div>
        <div class="fro-header__icon-wrapper">
        <AuthorizeView>
            <a href="/Account/Manage">@context.User.Identity?.Name!</a>
        </AuthorizeView>
            <a href="/visuSettings">
                <div class="fro-header__icon fro-icon">gear</div>
            </a>
        </div>
    </header>
    <NavMenu/>
    <MudMainContent Class="mt-16 pa-4" Style="margin-left: 5%">
        @Body
    </MudMainContent>
</MudLayout>

@code {
private bool _drawerOpen = false;

private void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}