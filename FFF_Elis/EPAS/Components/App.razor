<!DOCTYPE html>
<html class="fro-dark-context" lang="en">

<head class="fro-dark-context">
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <base href="/"/>

    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap" rel="stylesheet"/>
    <link href="_content/MudBlazor/MudBlazor.min.css" rel="stylesheet"/>
    <link href="app.css" rel="stylesheet"/>

    <link rel="stylesheet" href="leaflet/leaflet.css" />
    <link rel="stylesheet" href="https://unpkg.com/leaflet-routing-machine@latest/dist/leaflet-routing-machine.css" />
    <script src="leaflet/leaflet.js"></script>
    <script src="https://unpkg.com/leaflet-routing-machine@latest/dist/leaflet-routing-machine.js"></script>
    <script src="js/BoundaryCanvas.js"></script>
        
    <title>EPAS</title>
        
    <link rel="icon" type="image/png" href="img/korpsabzeichen.png"/>
    <link rel="stylesheet" href="styles/ds.css"/>
    <HeadOutlet @rendermode="RenderModeForPage"/>
</head>

<body class="fro-dark-context">
<Routes @rendermode="RenderModeForPage" />
<script src="_framework/blazor.web.js"></script>
<script src="_content/MudBlazor/MudBlazor.min.js"></script>
<script src="index.js"></script>
<script>
            window.SetCoordinates = function(lat, long) {
                DotNet.invokeMethodAsync('EPAS', 'SetCoordinates', lat, long);
            }
        </script>
</body>

</html>

@code {
    [CascadingParameter]
    private HttpContext HttpContext { get; set; } = default!;

    private IComponentRenderMode? RenderModeForPage => HttpContext.Request.Path.StartsWithSegments("/Account")
        ? null
        : InteractiveServer;
}