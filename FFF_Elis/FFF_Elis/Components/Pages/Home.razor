        //var arlamierteFFs = tmp1.EinsatzDataGetAllResult.First().Alarmierungen;
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        var exists = await LocalStorage.ContainKeyAsync("ClientSettings");

        if (!exists)
        {
            await LocalStorage.SetItemAsync("ClientSettings", new ClientSettings());
            ClientSettings.VisualItems = (await LocalStorage.GetItemAsync<ClientSettings>("ClientSettings")).VisualItems;
        }
        else
        {
            ClientSettings.VisualItems =  (await LocalStorage.GetItemAsync<ClientSettings>("ClientSettings")).VisualItems;
        }
        
        await InvokeAsync(StateHasChanged);
    }
}